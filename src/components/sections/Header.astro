---
import Button from "../ui/Button.astro";
import Logo from "../Logo.astro";
---

<style>
  nav a {
    @apply hover:bg-habibiViolet-800 px-3 py-2 rounded-md text-sm font-medium transition;
  }

  .request-button {
    @apply bg-habibiViolet-800 hover:bg-gray-100 hover:text-habibiViolet-800 !important;
  }

  header {
    background-image: url("/images/background_header.png");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }
</style>

<nav id="#home"class="sm:flex justify-between py-12 max-w-screen-xl mx-auto hidden px-2 xl:px-0">
  <Logo />
  <ul class="flex gap-1">
    <li>
      <a href="#home">Home</a>
    </li>
    <li>
      <a href="#features">Features</a>
    </li>
    <li>
      <a href="#pricing">Pricing</a>
    </li>
    <li>
      <a href="#about">About Us</a>
    </li>
    <li>
      <a href="#contact">Contact</a>
    </li>
    <li>
      <a href="#requestdemo" class="request-button">Request Demo</a>
    </li>
  </ul>
</nav>

<header class="text-center flex flex-col h-[600px] w-full py-24">
  <div class="flex justify-center mb-8">
    <div class="bg-black bg-opacity-55 sm:grow"></div>
    <div class="max-w-screen-xl w-full grow text-left">
      <div class="flex justify-center sm:justify-start">
        <div
          class="bg-black bg-opacity-55 py-12 px-4 xl:pl-0 sm:pr-12 text-center sm:text-left"
        >
          <h1 class="text-5xl">From Backstage to Front Desk</h1>
          <p class="text-3xl mt-8">All Your Club Needs in One Place.</p>
        </div>
      </div>
      <div class="grow"></div>
    </div>
    <div class="sm:grow"></div>
  </div>
  <div class="flex justify-start pl-2 xl:pl-0">
    <div class="sm:grow"></div>
    <div class="max-w-screen-xl sm:text-left w-full grow">
     <a href="#requestdemo"> <Button classes="shadow-2xl"> REQUEST A DEMO </Button></a>
    </div>
    <div class="sm:grow"></div>
  </div>
</header>
