<!-- Contact Section -->
<section id="contact" class="py-12 px-6  text-white">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-6 text-center">Contact Us</h2>
      
      <!-- Contact Info and Form -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <!-- Contact Info -->
        <div>
          <h3 class="text-xl font-bold mb-4">Reach Out to Us</h3>
          <p>If you have any questions or need further information, please don't hesitate to contact us.</p>
          <ul class="mt-4">
            <li><strong>Phone:</strong> +1 (555) 123-4567</li>
            <li><strong>Email:</strong> support@clubware.io</li>
            <li><strong>Address:</strong> 123 Clubware Lane, Tech City, TC 12345</li>
          </ul>
          <div class="mt-4">
            <h3 class="text-xl font-bold mb-2">Follow Us</h3>
            <div class="flex space-x-4">
              <!-- Icons can be replaced with SVG or <img> tags linked to the icons' sources -->
              <a href="#" class="hover:text-purple-500">Facebook</a>
              <a href="#" class="hover:text-purple-500">Twitter</a>
              <a href="#" class="hover:text-purple-500">LinkedIn</a>
            </div>
          </div>
        </div>
  
        <!-- Contact Form -->
        <div>
          <h3 class="text-xl font-bold mb-4">Send Us a Message</h3>
          <form action="#" method="POST">
            <div class="mb-4">
              <label for="name" class="block text-sm font-medium">Your Name</label>
              <input type="text" id="name" name="name" required class="w-full p-2 bg-purple-800 border border-purple-700 rounded-md" placeholder="Enter your name">
            </div>
            <div class="mb-4">
              <label for="email" class="block text-sm font-medium">Your Email</label>
              <input type="email" id="email" name="email" required class="w-full p-2 bg-purple-800 border border-purple-700 rounded-md" placeholder="Enter your email">
            </div>
            <div class="mb-4">
              <label for="message" class="block text-sm font-medium">Message</label>
              <textarea id="message" name="message" rows="4" required class="w-full p-2 bg-purple-800 border border-purple-700 rounded-md" placeholder="Your message here..."></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="bg-purple-700 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded-lg">Send Message</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>